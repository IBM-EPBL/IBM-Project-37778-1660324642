import wiotp.sdk.device
import time
import random
myConfig = { 
    "identity": {
        "orgId": "csgusn",
        "typeId": "RPI",
        "deviceId":"test-1"
    },
    "auth": {
        "token": "1123581321"
    }
}

def myCommandCallback(cmd):
    print("Message received from IBM IoT Platform: %s" % cmd.data['command'])
    m=cmd.data['command']

client = wiotp.sdk.device.DeviceClient(config=myConfig, logHandlers=None)

client.connect()

while True:
    testVar=random.randint(0,100)
    client.publishEvent(eventId="status", msgFormat="json", data=testVar, qos=0, onPublish=None)
    print("Published data Successfully: %s", testVar)
    client.commandCallback = myCommandCallback
    time.sleep(2)
	
client.disconnect()